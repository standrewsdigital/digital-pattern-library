<!-- Begin pattern: hero-banner //-->                                  
<section class="hero-section">
    <picture class="hero-section__image">
      <source srcset="{{asset bg-image}}1920x600.jpg" media="(min-width: 640px)">
      <img src="{{asset bg-image}}750x500.jpg" alt="{{caption}}">
    </picture>
    <div class="container">
        <div class="hero-section__content">
            <h2 class="hero-section__heading{{heading-colour}}"><span>{{default heading "[heading]"}}</span></h2>
        {{#if intro-buttons}}
            <div class="hero-section__content-group">
            <p class="hero-section__intro">{{default paragraph "[paragraph]"}}</p>
            {{#if action-text}}
            <a class="{{button-style}}" href="{{default action-url "[action-url]"}}">{{default action-text "[action-text]"}}</a>
            {{/if}}
            {{#if action-text-2}}
            <a class="{{button-style}}" href="{{default action-url "[action-url]"}}">{{default action-text-2 "[action-text-2]"}}</a>
            {{/if}}
            </div>
        {{/if}}
        </div>
    </div>
</section>
<!-- End pattern: hero-banner //-->