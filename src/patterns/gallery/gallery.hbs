<div class="gallery">
    {{{gallery-title}}}
    {{#if gallery-description}}
    <div class="gallery__description"><p>{{gallery-description}}</p></div>
    {{/if}}
    <div class="{{gallery-images-class}}">
        {{#gallery-images}}
        <figure id="{{id}}">
            <a href="{{large-img}}" {{#if lightbox-gallery }} data-lightbox="{{lightbox-gallery}}" data-title="{{caption}}" {{/if}}><img src="{{asset thumbnail}}" alt="{{alt}}"></a>
            <figcaption>{{{caption}}}</figcaption>
            {{#if download-button}}
                <a type="button" class="btn btn-lg btn-primary" href="{{large-img}}" download>Download</a>
            {{/if}}
            {{#if title}}
                <p><a href="#">{{title}}</a><br />{{date}}</p>
            {{/if}}
        </figure>
        {{/gallery-images}}
    </div>
</div>