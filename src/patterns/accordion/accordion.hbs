
<!-- Begin pattern: accordion //-->

<div class="accordion">
	{{#if items}}
		{{#items}}
			<h3><i class="chevron"></i>{{{ accordion-heading }}}</h3>
			<div>{{{accordion-content}}}</div>
		{{/items}}
	{{else}}
	<h3><i class="chevron"></i>{{#if accordion-heading}}{{{ accordion-heading }}}{{else}}[heading]{{/if}}</h3>
	<div>
		{{#if accordion-content}}{{{ accordion-content }}}{{else}}[content]{{/if}}
	</div>
	{{/if}}
</div>

<!-- End pattern: accordion //-->
