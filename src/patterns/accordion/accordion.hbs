<!-- Begin pattern: accordion //-->
{{#if accordion-group}}
<button class="accordion-group__toggle">Open all</button>
<ul class="accordion-group">
{{/if}}
{{#each accordion}}
{{{../accordion-item-open}}}
	<div class="accordion-item__toggle">
		<h3 class="accordion-item__toggle-title">
	    	<button class="accordion-item__toggle-button">{{accordion-heading}}</button>
	    </h3>
	    {{#if accordion-intro}}
	    <p class="accordion-item__toggle-intro">{{accordion-intro}}</p>
	    {{/if}}	
	    {{#each accordion-keyfacts}}
	    <span class="accordion-item__toggle-keyfact"><i class="{{keyfact-icon}}" aria-hidden="true"></i>{{keyfact-text}}</span>
	    {{/each}}	
	</div>
	<div class="accordion-item__content">{{{accordion-content}}}</div>
{{{../accordion-item-close}}}
{{/each}}
{{#if accordion-group}}
</ul>
{{/if}}
<!-- End pattern: accordion //-->
