<!-- Begin pattern: responsive-embed //-->
<div class="container">
    <div class="row">
        {{#if column1}}
            <div class="{{column1}}">
                <div class="embed-responsive embed-responsive-16by9 google-map">
                    <iframe src="{{map}}" class="embed-responsive-item"></iframe>
                </div>
            </div>
            <div class="{{column2}}">
                {{{text}}}
                {{{sidebar}}}
            </div>        
        {{else}}
            <div class="col-sm-12">
                <div class="embed-responsive embed-responsive-16by9 google-map">
                    <iframe src="{{map}}" class="embed-responsive-item google-map"></iframe>
                </div>
            </div>
        {{/if}}
    </div>
</div>
<!-- End pattern: responsive-embed //-->