<!-- Begin pattern: featured people //-->
{{#each featured}}
<section class="featured-people {{colour}}">
	<div class="container">
		<h3>{{heading}}</h3>
		<div class="row">
			{{#each columns}}
			{{#unless single}}
			<div class="{{size}}">
			{{/unless}}
				{{#if single}}<div class="col-md-3">{{/if}}<a class="person" href="{{link}}"><img src='../../assets/core/images/featured-people.png'>{{#if single}}</a></div>{{/if}}
				{{#if single}}<div class="col-md-9 single-paragraph"><a class="person" href="{{link}}">{{/if}}<h4 class="text-center">{{name}}</h4></a>
				<p class="text-center">{{title}}</p>
				<p class="text-center">{{#if description}}{{description}}{{/if}}</p>
				{{#if single}}</div>{{/if}}
			{{#unless single}}	
			</div>
			{{/unless}}
			{{/each}}
		</div>
	</div>
</section>
{{/each}}
<!-- End pattern: featured people  //-->