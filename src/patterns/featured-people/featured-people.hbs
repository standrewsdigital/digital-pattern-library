<!-- Begin pattern: featured people //-->
{{#each featured}}
<section class="featured-people {{colour}}">
	<div class="container">
		<h3>Featured people</h3>
		<div class="row">
			{{#each columns}}
			<div class="col-md-4">
				<a href="{{link}}"><img src='../../assets/core/images/featured-people.png'></a>
				<h4 class="text-center">{{name}}</h4>
				<p class="text-center">{{title}}</p>
				<p class="text-center">{{description}}</p>
			</div>
			{{/each}}
		</div>
	</div>
</section>
{{/each}}
<!-- End pattern: featured people  //-->