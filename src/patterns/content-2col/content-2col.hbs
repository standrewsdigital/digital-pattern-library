
<!-- Begin pattern: content-2col //-->
{{#if background}}
    <section class="{{{background}}}" role="main">
{{/if}}
    <div class="container" id="main-content">

        {{#if heading}}
            {{{heading}}}
        {{/if}}

        <div class="row">
            <div {{{col-1}}}>
                {{#if text}}
                     {{{text}}}
                {{/if}}
            </div>
            <div {{{col-2}}}>
                {{#if sidebar}}
                    {{{sidebar}}}
                {{/if}}
            </div>
        </div>
    </div>
{{#if background}}    
    </section>
{{/if}}
<!-- End pattern: content-2col //-->
