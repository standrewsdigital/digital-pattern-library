<!-- Begin pattern: filter box //-->
<div class="filter-box">
    <a class="filter-box__clear" href="" title="Remove all refinements">
        <i class="fa fa-times" aria-hidden="true"></i>Clear all filters
    </a>
    <h3 class="sr-only">{{filter-heading}}</h3>
    {{#each filters-list}}
    <ul class="filter-box__list{{#if filters-list-drilldown}} filter-box__list-group{{/if}}">
        {{#each filters-list-group}}
        <li>
            <a class="btn-xsmall-tag" href="#">{{#if icon}}{{{icon}}}{{/if}}<i class="fa fa-times" aria-hidden="true"></i><span class="sr-only">Clear</span> {{label}}</a>
        </li>
        {{/each}}
    </ul>
    {{/each}}
    {{#if button}}
    <button class="btn btn-primary">View filters</button>
    {{/if}}
</div>
<!-- End pattern: filter box //-->