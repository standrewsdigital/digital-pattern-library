    <div class="row">
        <div class="col-xs-12">
            {{#each news-items}}
            <div class="col-md-9 col-sm-6">
                <h3><a href="#">{{title}}</a></h3>
                <p>{{description}} â€¦</p>
                <p>{{{date}}}</p>
            </div>
