<!-- Begin pattern: contact-card //-->
<div class="row">
    {{#each cards}}
    <div class="col-xs-12 col-sm-6 col-lg-4">
        <article id="{{id}}" class="contact-card {{contract-type}}">
            <h3>
                {{#if image}}
                <a href="#">{{name}}</a>
                {{else}}
                {{name}}
                {{/if}}
            </h3>
            {{#if image}}
                <img src="../../assets/core/images/contact-card-default.gif" alt="{{name}}" title="{{name}}" class="profilePhoto">
            {{/if}}
            <h4>{{title}}</h4>



            {{#if email}}
            <div class="contact">
                <h4>Contact</h4>
                <ul class="contact-card-links">
            {{/if}}
                    {{#if phone}}
                    <li>
                        <a href="tel:#" data-rel="external">01334 46xxxx</a>
                    </li>
                    {{/if}}
                    {{#if email}}
                    <li>
                        <a href="mailto:#">example@st-andrews.ac.uk</a>
                    </li>
                    {{/if}}
                {{#if email}}
                </ul>
            </div>
            {{/if}}
            {{#if areas-expertise.area-1}}
            <h4>Areas of expertise</h4>
            {{#if areas-expertise.area-1}}<a href="#">{{areas-expertise.area-1}}</a><br />{{/if}}
            {{#if areas-expertise.area-2}}<a href="#">{{areas-expertise.area-2}}</a><br />{{/if}}
            {{#if areas-expertise.area-3}}<a href="#">{{areas-expertise.area-3}}</a><br />{{/if}}
            {{#if areas-expertise.area-4}}<a href="#">{{areas-expertise.area-4}}</a><br />{{/if}}
            {{#if areas-expertise.area-5}}<a href="#">{{areas-expertise.area-5}}</a><br />{{/if}}
            {{/if}}
        </article>
    </div>
    {{/each}}
</div>
<!-- End pattern: contact-card //-->