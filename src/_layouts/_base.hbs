---
date: <%= new Date() %>
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title >{{ title }}</title >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{#if core-assets}}
        <link href="{{asset 'styles/screen.css'}}" rel="stylesheet" type="text/css" media="screen" />
        <link href="{{asset 'styles/print.css'}}" rel="stylesheet" type="text/css" media="print" />
        <!--[if lt IE 9]><link href="{{asset 'styles/ie.css'}}" rel="stylesheet" type="text/css" media="screen" /><![endif]-->
    {{else}}
        <link href="{{asset 'styles/doc.css'}}" rel="stylesheet" type="text/css" media="screen" />
    {{/if}}

  </head>
  <body>


    {{> body  }}


    {{#if core-assets}}
    <script src="{{asset 'scripts/core.js'}}" type="text/javascript" ></script> 
    {{else}}

    <footer>

        <div class="row">
            <div class="col-xs-6">
                {{pkg.name}} v{{pkg.version}}
            </div>

            <div class="col-xs-6 text-right">
                {{formatDate date "%F"}} at {{formatDate date "%I:%M%p"}}
            </div>
        </div>

    </footer>

    <script src="{{asset 'scripts/doc.js'}}" type="text/javascript" ></script>
    {{/if}}
    <script src="http://localhost:35729/livereload.js"></script>
  </body >
</html >
