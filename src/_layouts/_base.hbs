---
date: <%= new Date() %>
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title >{{ title }}</title >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{#if core-assets}}
        <link href="{{asset 'styles/screen.css'}}" rel="stylesheet" type="text/css" media="screen" />
        <link href="{{asset 'styles/print.css'}}" rel="stylesheet" type="text/css" media="print" />
        <!--[if lt IE 9]><link href="{{asset 'styles/ie.css'}}" rel="stylesheet" type="text/css" media="screen" /><![endif]-->
    {{else}}
        <link href="{{asset 'styles/doc.css'}}" rel="stylesheet" type="text/css" media="screen" />
    {{/if}}

  </head>
  <body>

    <div class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <a href="{{rel "index.html"}}" class="navbar-brand">Digital pattern library</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">

            {{#each dpl-nav.items}}

                {{#if items}}

            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="{{rel url}}" id="nav-{{name}}">{{name}}<span class="caret"></span></a>
              <ul class="dropdown-menu" aria-labelledby="{{name}}">
                {{#each items}}
                <li><a href="{{rel url}}">{{name}}</a></li>
                {{/each}}
              </ul>
            </li>

                {{else}}
            <li>
              <a href="{{rel url}}">{{name}}</a>
            </li>
                {{/if}}

            {{/each}}


          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="http://digitalcommunications.wp.st-andrews.ac.uk/" target="_blank">Digital Communications</a></li>
          </ul>

        </div>
      </div>
    </div>


    {{> body  }}


    {{#if core-assets}}
    <script src="{{asset 'scripts/core.js'}}" type="text/javascript" ></script> 
    {{else}}

    <footer>

        <div class="row">
            <div class="col-xs-6">
                {{pkg.name}} v{{pkg.version}}
            </div>

            <div class="col-xs-6 text-right">
                {{formatDate date "%F"}} at {{formatDate date "%I:%M%p"}}
            </div>
        </div>

    </footer>

    <script src="{{asset 'scripts/doc.js'}}" type="text/javascript" ></script>
    {{/if}}
    <script src="http://localhost:35729/livereload.js"></script>
  </body >
</html >
